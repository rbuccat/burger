<h1>Eat-Da-Burger!</h1>

<ol>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour It!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ol>

<ol>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        
        {{this.burger_name}}

      </li>
    {{/if}}
  {{/each}}
</ol>

<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <input type="text" id="bur" name="burger_name" rows="8" cols="40">
    <input type="hidden" name="devoured" value="0">
  </div>

  <button type="submit">Submit</button>
</form>
